<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <filter>
        <filter-name>AuthorizeFilter</filter-name>
        <filter-class>Filters.AuthorizeFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthorizeFilter</filter-name>
        <url-pattern>/UserPages/menu.jsp</url-pattern>
        <dispatcher>REQUEST</dispatcher>
    </filter-mapping>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>Servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Popolni</servlet-name>
        <servlet-class>Popolni</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddUser</servlet-name>
        <servlet-class>Admin.AddUser</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddMenuItem</servlet-name>
        <servlet-class>Admin.AddMenuItem</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteMenuItem</servlet-name>
        <servlet-class>Admin.DeleteMenuItem</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddRestaurant</servlet-name>
        <servlet-class>Admin.AddRestaurant</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RemoveRestorant</servlet-name>
        <servlet-class>Admin.RemoveRestorant</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteUser</servlet-name>
        <servlet-class>Admin.DeleteUser</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateUser</servlet-name>
        <servlet-class>Admin.UpdateUser</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Popolni</servlet-name>
        <url-pattern>/Popolni.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddUser</servlet-name>
        <url-pattern>/AdminPages/AddUser.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddMenuItem</servlet-name>
        <url-pattern>/AdminPages/AddMenuItem.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteMenuItem</servlet-name>
        <url-pattern>/AdminPages/DeleteMenuItem.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddRestaurant</servlet-name>
        <url-pattern>/AdminPages/AddRestaurant.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RemoveRestorant</servlet-name>
        <url-pattern>/AdminPages/RemoveRestorant.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteUser</servlet-name>
        <url-pattern>/AdminPages/DeleteUser.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateUser</servlet-name>
        <url-pattern>/AdminPages/UpdateUser.do</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>najava.jsp</welcome-file>
    </welcome-file-list>
</web-app>
